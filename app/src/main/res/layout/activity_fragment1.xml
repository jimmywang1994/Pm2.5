<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.wangwei.fragment.fragment1"
        android:id="@+id/fragment1">
        <TextView android:text="AQI" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            />
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:textSize="60sp"
            android:paddingTop="100sp"
            android:paddingLeft="105sp"/>
        <TextView android:text="空气质量"
            android:id="@+id/kqzl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/tv1"
            android:paddingLeft="0sp"
            android:layout_marginTop="60sp"

            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kqzl"
            android:textSize="50sp"
            android:id="@+id/quality"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:paddingLeft="0sp"
            android:layout_marginTop="40sp"
            />
        <TextView android:text="AAA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quality"
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:paddingLeft="0sp"
            android:layout_marginTop="200sp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView1"
        android:layout_alignEnd="@+id/tv1"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

